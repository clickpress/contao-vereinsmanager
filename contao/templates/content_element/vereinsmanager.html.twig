{% extends "@Contao/content_element/_base.html.twig" %}

{% set attributes = attrs()
    .addClass("#{type}")
    .mergeWith(attributes|default) %}

{% set searchable = false %}

{% block content %}
    {% set source = data.vereinsmanager_url %}
    {% do csp_source('frame-src', source) %}
    <iframe
            data-scroll-behavior="iframe"
            data-scroll-offset="{{ data.managerOffset }}"
            data-smooth-scroll="{{ data.managerSmoothscroll }}"
            id="vereinsmanager-iframe-1"
            src="{{ source }}/tourenplan/">

    </iframe>
    <style{{ attrs().setIfExists('nonce', csp_nonce('style-src')) }}>
        #vereinsmanager-iframe-1 {
            width: 100%;
            border: none;
            min-height: 400px;
        }
    </style>
    <script {{ attrs().setIfExists('nonce', csp_nonce('script-src')) }}
            src="{{ data.vereinsmanager_url }}/static/scripts/vm_iframe_resizer.js"></script>
{% endblock %}
